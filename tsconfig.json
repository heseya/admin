{
  "compilerOptions": {
    "target": "ES2016",
    "module": "esnext",
    "outDir": "./dist",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["jest", "vue-meta"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["es5", "esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
  "exclude": ["node_modules", "tests/e2e"]
}
